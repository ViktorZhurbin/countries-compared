{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"moduleDetection": "force",
		"composite": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["src"]
}
